{% extends '@admin/default_frame.twig' %}
{% set menus = [ 'setting', 'system_index' ] %}

{% block title %}{{ 'admin.setting.system.system_info'|trans }}{% endblock %}
{% block sub_title %}{{ 'admin.setting.system'|trans }}{% endblock %}

{% block main %}

    <div class="c-contents-cols">
        <div class="c-contents-primary-col">
            <div>
                <div class="card rounded-0 mb-4">
                    <div class="card-header">
                        <div class="row">
                            <div class="col-8" id="server_info_box_header">
                                <div class="d-inline-block">
                                    <span class="card-title">
                                        {{ 'admin.setting.system.system_info'|trans }}
                                    </span>
                                    <i class="fa fa-question-circle fa-lg ms-1"></i>
                                </div>
                            </div>
                            <div class="col-4 text-end">
                                <a data-bs-toggle="collapse" href="#systemInfo"
                                   aria-expanded="false" aria-controls="systemInfo">
                                    <i class="fa fa-angle-up fa-lg"></i>
                                </a>
                            </div>
                        </div>
                    </div>
                    <div class="collapse show card-collapse" id="systemInfo">
                        <div class="card-body" id="server_info_box_body_inner">
                            {% for key, item in info %}
                                <div class="row mb-2">
                                    <div class="col-2">
                                        <span>{{ item.title }}</span>
                                    </div>
                                    <div class="col">
                                        <div class="row">
                                            <div class="col" id="server_info_box_value-{{ loop.index }}">
                                                {{ item.value }}
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            {% endfor %}
                        </div>
                    </div>
                </div>
            </div>

            <div>
                <div class="card rounded border-0 mb-4">
                    <div class="card-header">
                        <div class="row">
                            <div class="col-8" id="php_info_box_header">
                                <div class="d-inline-block" data-bs-toggle="tooltip" data-bs-placement="top" title="{{ 'tooltip.setting.system.system.php_info'|trans }}">
                                    <span class="card-title">{{ 'admin.setting.system.system.php_info'|trans }}</span>
                                    <i class="fa fa-question-circle fa-lg ms-1"></i>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="php_info_box_frame">
                        <iframe name="php_info" src="{{ url('admin_setting_system_system_phpinfo') }}" height="500" style="border: 0; width: 100%;"></iframe>
                    </div>
                </div>
            </div>

        </div>
    </div>

{% endblock %}